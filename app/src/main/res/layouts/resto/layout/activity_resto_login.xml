<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resto.RestoLoginActivity">

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="@string/email_address"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="80dp"
        />

    <EditText
        android:id="@+id/edt_email_adress"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
         />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/password"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />
    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
      />

    <ProgressBar
        android:id="@+id/pb_round"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <Button
        android:id="@+id/btt_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cont"
        android:backgroundTint="@color/clearYellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
         />

    <TextView
        android:id="@+id/tv_iforgetPass"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="@string/iforget"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

</TableLayout>