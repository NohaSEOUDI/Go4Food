<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resto.RestoRegisterActivity"
    tools:layout_editor_absoluteX="-126dp"
    tools:layout_editor_absoluteY="0dp">


    <TextView
        android:id="@+id/tv_resto_name"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/resto_name"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
         />

    <EditText
        android:id="@+id/edt_resto_name"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
       />

    <TextView
        android:id="@+id/tv_adress"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
       />

    <EditText
        android:id="@+id/edt_adress"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
       />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="@string/city"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
         />

    <EditText
        android:id="@+id/edt_city"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="@string/email_address"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
         />

    <EditText
        android:id="@+id/edt_email_adress"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
       />


    <TextView
        android:id="@+id/password"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="textPassword"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/tv_numTel"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/numTel"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <EditText
        android:id="@+id/edt_numTel"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />
    <ProgressBar
        android:id="@+id/pbar_progressBarRound"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <Button
        android:id="@+id/btt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/clearYellow"
        android:text="@string/cont"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

</TableLayout>