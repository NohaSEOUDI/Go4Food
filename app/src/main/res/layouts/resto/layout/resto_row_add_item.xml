<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="32dp"
    android:paddingBottom="3dp">
    <!-- pour mettre un peut d'interaction avec l'ajout de Produit -->
    <!-- amélioration ajout d'spinner au lieu d'un editText-->
    <!-- on insére le nom d'item(Produit), sur la coté droite on peut enlever l'et -->
    <TableRow
        android:id="@+id/tr_item_added"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="32dp"
        >
        <EditText
            android:id="@+id/et_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/clearYellow2"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/imv_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_close" />
    </TableRow>

</LinearLayout>