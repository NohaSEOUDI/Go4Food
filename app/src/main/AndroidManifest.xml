<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.nohas.go4food" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Go4Food" >
        <activity
            android:screenOrientation="portrait"
            android:name=".resto.RestoRegisterActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".driver.DriverRegisterActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".client.ClientRegisterActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".resto.RestoLoginActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".driver.DriverLoginActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".client.ClientLoginActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".resto.RestoInterfaceActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".driver.DriverInterfaceActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".client.ClientInterfaceActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:exported="false" />


    </application>

</manifest>